<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@drawable/cardtop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="13dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icons8_no_image_50"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="76dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleOfSource"
                android:layout_width="220dp"
                android:layout_height="22dp"
                android:text="Title"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/figtreeblack" />

            <TextView
                android:id="@+id/date"
                android:layout_width="95dp"
                android:layout_height="19dp"
                android:text="Date"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/figtreeblack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="76dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/clicks"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:text="Number"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/figtreeblack" />

            <TextView
                android:id="@+id/fixedText"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:text="clicks"
                android:textSize="14sp"
                android:layout_marginTop="1dp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/figtreeblack" />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/lightBlue"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:padding="2dp">
            <TextView
                android:id="@+id/link"
                android:layout_width="327dp"
                android:layout_height="25dp"
                android:text="Clickable Text"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/figtreebold" />

            <ImageView
                android:id="@+id/copyImage"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="right"
                android:layout_marginLeft="1dp"
                android:src="@drawable/copy" />
        </LinearLayout>

</LinearLayout>
    <!-- Square shaped image on top left corner -->


